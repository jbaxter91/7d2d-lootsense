<?xml version="1.0" encoding="UTF-8"?>
<configs>

  <!-- PERCEPTION_MASTERY: retarget vanilla rank tooltip keys to custom localization keys -->
  <!-- Vanilla confirms perk name = perkPerceptionMastery and ranks use perkPerceptionMasteryRank#Desc/LongDesc -->
  <!-- See vanilla: perkPerceptionMasteryRank1Desc..Rank5LongDesc -->

  <!-- Rank 1 -->
  <set xpath="/progression/perks/perk[@name='perkPerceptionMastery']//effect_description[@level='1']/@desc_key">c1_perkPerceptionMasteryRank1Desc</set>
  <set xpath="/progression/perks/perk[@name='perkPerceptionMastery']//effect_description[@level='1']/@long_desc_key">c1_perkPerceptionMasteryRank1LongDesc</set>

  <!-- Rank 2 -->
